using System;
class Distance
{
    public static void Main()
    {
        int fuel, speed, distance, time;
        
        var entry = Console.ReadLine();
        if(entry.ToLower() == "quit")
        {
            Break;
        }
        try
        {
        Console.WriteLine("Enter the Speed(km/hr) : or type \"quit\" to exit: ");
        speed = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Enter the Time(min) : ");
        time = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Enter Fuel(l) : ");
        fuel = Convert.ToInt32(Console.ReadLine());
        distance = (speed * time) / fuel;
        }
        catch(Formart Exception:);
        {
            Console.WriteLine();
            continue;
        }
        Console.WriteLine("Distance Travelled (kms) : " + distance);
        // Repeat until user quits
    }
    Console.WriteLine("GoodBye");
}
